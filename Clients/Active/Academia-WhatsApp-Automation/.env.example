# WhatsApp Configuration
WHATSAPP_SESSION=academia_session
WHATSAPP_AUTO_REPLY=true
WHATSAPP_QR_TIMEOUT=60000

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/academia_whatsapp?schema=public"

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Academia Integration
ACADEMIA_SYSTEM_URL="http://localhost:8080/api"
ACADEMIA_API_KEY="your_academia_api_key_here"

# Automation Settings
AUTOMATION_ENABLED=true
AUTOMATION_SCHEDULE="0 9 * * *"
MAX_MESSAGES_PER_HOUR=100
MESSAGE_DELAY_MS=2000

# WhatsApp Business Features
ENABLE_TEMPLATES=true
ENABLE_INTERACTIVE_MESSAGES=true
ENABLE_MEDIA_MESSAGES=true

# Security
JWT_SECRET="your_super_secret_jwt_key_here"
WEBHOOK_SECRET="webhook_secret_for_validation"

# Third-party Integrations
CALENDLY_ACCESS_TOKEN=""
PAYMENT_GATEWAY_KEY=""
ANALYTICS_TRACKING_ID=""

# Development
DEBUG_MODE=true
MOCK_WHATSAPP=false