{
  "name": "academia-whatsapp-automation",
  "version": "2.0.0",
  "description": "Sistema completo de automação WhatsApp para academias - Reativação, Nurturing e Captação",
  "type": "module",
  "main": "src/backend/server.ts",
  "scripts": {
    "dev": "tsx --watch src/backend/server.ts",
    "build": "tsc",
    "start": "node dist/src/backend/server.js",
    "test": "jest",
    "lint": "eslint src/ --ext .ts,.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "queue:dev": "bullmq-dashboard",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "bash scripts/deploy.sh",
    "mcp:install": "npm install @modelcontextprotocol/sdk @modelcontextprotocol/server-postgres @modelcontextprotocol/server-brave-search @modelcontextprotocol/server-puppeteer @modelcontextprotocol/server-filesystem @modelcontextprotocol/server-gdrive @modelcontextprotocol/server-gmail @modelcontextprotocol/server-slack @modelcontextprotocol/server-linear @modelcontextprotocol/server-sentry",
    "mcp:test": "node scripts/test-mcp-connections.js",
    "mcp:setup": "node scripts/setup-mcp-credentials.js",
    "analytics:daily": "node scripts/run-daily-analytics.js",
    "backup:weekly": "node scripts/run-weekly-backup.js",
    "audit:complete": "curl -X POST http://localhost:3001/api/audit/complete -H 'Authorization: Bearer $AUTH_TOKEN'",
    "audit:whatsapp": "curl -X POST http://localhost:3001/api/audit/whatsapp -H 'Authorization: Bearer $AUTH_TOKEN'",
    "audit:compliance": "curl -X POST http://localhost:3001/api/audit/compliance -H 'Authorization: Bearer $AUTH_TOKEN'",
    "audit:performance": "curl -X POST http://localhost:3001/api/audit/performance -H 'Authorization: Bearer $AUTH_TOKEN'",
    "audit:roi": "curl -X POST http://localhost:3001/api/audit/roi -H 'Authorization: Bearer $AUTH_TOKEN'",
    "audit:dashboard": "curl -X GET http://localhost:3001/api/audit/dashboard -H 'Authorization: Bearer $AUTH_TOKEN'"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "fitness",
    "academia",
    "baileys",
    "crm",
    "reativacao",
    "nurturing"
  ],
  "author": "Lion Consultoria",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@prisma/client": "^5.10.0",
    "@whiskeysockets/baileys": "^6.7.0",
    "better-sqlite3": "^12.2.0",
    "bullmq": "^5.4.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.10.0",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.6.13",
    "sharp": "^0.33.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5"
  }
}
